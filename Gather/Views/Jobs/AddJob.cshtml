@{
  Layout = "_Layout";
}

@model Gather.Models.Job

<h2>Add a Job</h2>

<h4>Add a Treat to this Job: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  <div class="container">
    @Html.HiddenFor(model => model.JobId)

    @Html.Label("Select Job")
    @Html.DropDownList("JobId")

    <input type="submit" value="Save" />
  </div>
}

<p>@Html.ActionLink("Back to list", "Index")</p>