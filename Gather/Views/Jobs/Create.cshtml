@{
  Layout = "_Layout";
}

@model Gather.Models.Job

<h4>Add a new Job</h4>

@using (Html.BeginForm())
{
  <div class = "container">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @* <span asp-validation-for = "Name" class= "text-danger"></span> *@
    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })

    @Html.LabelFor(model => model.Description)
    @Html.TextBoxFor(model => model.Description)
    @* <span asp-validation-for = "Description" class= "text-danger"></span> *@
    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })

    @Html.LabelFor(model => model.PostDate)
    @Html.TextBoxFor(model => model.PostDate)
    @* <span asp-validation-for = "PostDate" class= "text-danger"></span> *@
    @Html.ValidationMessageFor(m => m.PostDate, "", new { @class = "text-danger" })

    <input type="submit" value="Add new Job" class="btn btn-default" />
  </div>
}

