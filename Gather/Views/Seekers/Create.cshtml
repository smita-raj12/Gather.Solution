@{
  Layout = "_Layout";
}

@model Gather.Models.Seeker

<h4>Add a new Seeker</h4>

@using (Html.BeginForm())
{
  <div class = "container">
    @Html.LabelFor(model => model.Name, new { @class = "text", type = "text", required = "required" })
    @Html.TextBoxFor(model => model.Name, new { @class = "text", type = "text", required = "required" })<br />
    @Html.LabelFor(model => model.Email, new { @class = "text", type = "text", required = "required" })
    @Html.TextBoxFor(model => model.Email, new { @class = "text", type = "text", required = "required" })<br />
    @Html.LabelFor(model => model.PhoneNumber, new { @class = "number", type = "number", required = "required" })
    @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "number", type = "number", required = "required" })<br />
    @Html.LabelFor(model => model.Birthdate, new { @class = "text", type = "text", required = "required" })
    @Html.EditorFor(model => model.Birthdate, new { @class = "text", type = "text", required = "required" })<br />
    @Html.LabelFor(model => model.Education, new { @class = "text", type = "text", required = "required" })
    @Html.TextBoxFor(model => model.Education, new { @class = "text", type = "text", required = "required" })<br />
    @Html.LabelFor(model => model.SkillSet, new { @class = "text", type = "text", required = "required" })
    @Html.TextBoxFor(model => model.SkillSet, new { @class = "text", type = "text", required = "required" })<br />
    @Html.LabelFor(model => model.GitHubLink, new { @class = "text", type = "text", required = "required" })
    @Html.TextBoxFor(model => model.GitHubLink, new { @class = "text", type = "text", required = "required" })<br />
    @Html.LabelFor(model => model.LinkedLink, new { @class = "text", type = "text", required = "required" })
    @Html.TextBoxFor(model => model.LinkedLink, new { @class = "text", type = "text", required = "required" })<br />
    @Html.LabelFor(model => model.AboutMe, new { @class = "text", type = "text", required = "required" })
    @Html.TextAreaFor(model => model.AboutMe, new { @class = "text", type = "text", required = "required" })<br />
    
    @Html.Label("Select Job")
    @Html.DropDownList("JobId")

    <input type="submit" value="Add new seeker" class="btn btn-default" />
  </div>  
}
<p>@Html.ActionLink("Show all Seekers", "Index")</p>